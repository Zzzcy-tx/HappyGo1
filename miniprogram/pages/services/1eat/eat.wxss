/* pages/services/1eat/eat.wxss */

.allMid{
  display: flex;
  flex-direction: column;

  align-items: center;
  /* justify-content: center; */


  width: 100vw;
}

.productContainer{
  display: flex;
  flex-direction: column;
  margin-top: 3vh;
  margin-bottom: 3vh;
}

.product{
  display: flex;
  margin-top: 1vh;
  margin-bottom: 2vh;

  width: 87vw;
  height: 14vh;
  background-color:darkgoldenrod;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;

  justify-content: flex-start;
  align-items: flex-end;

}

.productImage{
  position: absolute;
  width: 87vw;
  height: 14vh;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  z-index: 0;
}

.shopInfoBox{
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;

  height: 40%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.7);
  z-index: 999;
}

.shopName{
  margin-left: 3%;
  margin-bottom: 3%;
}