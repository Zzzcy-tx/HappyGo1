<view class="notice-container">
  <div class="overlap-container">
    <image class="notice-title-backgrd">"/img/whitebg"</image> 
    <text class="notice-title">公告栏：</text> 
  </div>
  <view class="notice-scroll-inner" animation="{{scrollAnimation}}">
    <view class="notice-item">
      <image class="notice-icon" src="/images/notice-icon.png"></image>
      <text class="notice-text">{{Notice}}</text>
    </view>
  </view>
</view>


<swiper class="banner" indicator-dots indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#fff" autoplay
  interval="3000" circular>
  <swiper-item>
    <image class="originalRatio" src="/img/1.jpg"></image>
  </swiper-item>
  <swiper-item>
    <image class="originalRatio" src="/img/2.jpg"></image>
  </swiper-item>
  <swiper-item>
    <image class="originalRatio" src="/img/3.jpg"></image>
  </swiper-item>
</swiper>


